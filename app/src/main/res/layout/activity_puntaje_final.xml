<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PuntajeFinal" android:background="@drawable/fondo">

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/guideline" app:layout_constraintGuide_end="319dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="222dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="509dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="411dp"
            android:layout_marginRight="411dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/puntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            tools:text="@string/puntaje"
            android:contentDescription="@string/puntaje" android:textSize="30sp"
            android:textColor="@color/colorPrimary" android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/guideline"/>
    <TextView
            android:text="@string/puntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumeroPuntaje"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" tools:text="@tools:sample/lorem"
            android:contentDescription="@string/puntaje" android:textSize="36sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" app:layout_constraintVertical_bias="0.181"
            android:textColor="@color/colorPrimary" app:layout_constraintHorizontal_bias="0.5"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="490dp" android:id="@+id/guideline2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="365dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="366dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="411dp" android:layout_marginRight="411dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/menu"
            android:id="@+id/BtnMenu" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/NumeroPuntaje" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.944"
            android:contentDescription="@string/descripcionGeneral"/>
</android.support.constraint.ConstraintLayout>